<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tool="http://schemas.android.com/tools"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="4dp"
        android:focusable="true">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/thumbnail_imgview"
                android:layout_height="80dp"
                android:layout_width="100dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="Thumbnail"/>
        <TextView
                android:id="@+id/title_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tool:text="Title"
                android:textColor="@color/textColorBlack"
                android:textSize="25sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/thumbnail_imgview"
                android:layout_marginStart="130dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:id="@+id/address_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="Address"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/title_txtView"
                app:layout_constraintStart_toEndOf="@id/thumbnail_imgview"
                android:layout_marginStart="26dp"
                android:layout_marginTop="2dp"/>
        <TextView
                android:id="@+id/salary_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="Salary"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/address_txtView"
                app:layout_constraintStart_toEndOf="@id/thumbnail_imgview"
                android:layout_marginStart="26dp"
                android:layout_marginTop="2dp"/>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>


